<form method="post" >
	<div>
    <h1>LogIn </h1>
    <p>Please fill in this form to enter to your account.</p>
    <hr>
    <div>
        <label><b>Email</b></label><br />
        <input type="text" placeholder="Enter Email" name="Email" value="@Model.Email" required>
        <br />
        <span class="alert-danger">@ViewBag.emailNote</span>
    </div>
      <br />
    <div>
        <label><b>Password</b></label><br />
        <input type="password" placeholder="Enter Password" name="Password" value="@Model.Password" required autocomplete="off" >
        <br />
        <span class="alert-danger">@ViewBag.passNote</span>
    </div>
    <br />
    <div>
        <input type="checkbox" name="remember" value="1">
        <label><b>Remember Me For a Month</b></label>
        <br />
    <br />
    </div>
        <div>
            Doesnt's have an account?<a href="/User/SignUp">Signup</a>
            <br />
        </div>
        <br />
    <br />
    <div>
            <input type="submit" value="LogIn ">
    </div>
</div>
</form>